<h1>Login</h1>

{{#if error}}
<p>Error: {{error}}</p>
{{/if}}

<form method="POST" action="/user/login">
    <div> 
        <label>Email</label>
        <input type="email" name="email">
    </div>

    <div> 
        <label>Password</label>
        <input type="password" name="password">
    </div>
    <div>
        <input type="submit" value="Login">
    </div>
</form>
<a href="/user/register">Log In</a>